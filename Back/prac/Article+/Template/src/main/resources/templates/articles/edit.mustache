{{>layouts/header}}

<form class="container" action="/articles/update" method="post"> <!--해당 링크로 연결함 -->
    <input name="id" type="hidden" value="{{article.id}}">  <!-- 값을 미리 준거임, article 명시는 해도됨 그냥하자 -->
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{article.title}}">
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content">{{article.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles/{{article.id}}" class="btn btn-danger">Back</a>
</form>

{{>layouts/footer}}